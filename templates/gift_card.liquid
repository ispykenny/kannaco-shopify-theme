
<!doctype html>
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <meta name="format-detection" content="telephone=no">
  {{ 'vendor/qrcode.js' | shopify_asset_url | script_tag }}
</head>
<body>
<div class="header-spacer"></div>
  <div class="qr-parent inner" style="margin: auto; text-align: center;">
    <div class="gift_card_image" style="margin: auto; max-width: 600px;">
      <img src="https://cdn.shopify.com/s/files/1/0266/9782/6383/files/Kannaco_Gift_Card.png?v=1608780694" alt="Kannaco Gift Card" width="100%"><br/>
    </div>
    <div>
      <br/><h4>Your gift card Number: <span class="orange">{{ gift_card.code }}</span><h4><br/>
      <h4>Your gift card Available balance: <span class="orange">{{ gift_card.balance | money_with_currency }}</span><h4><br/>
      <h4>Your gift card Initial balance: <span class="orange">{{ gift_card.initial_value | money_with_currency }}</span><h4><br/>
    </div>
  </div>
  {% comment %} <script>
    new QRCode(document.getElementById("qr-code"), {
      text: "{{ gift_card.qr_identifier }}",
      width: 120,
      height: 120 
    });
  </script> {% endcomment %}
  <footer>
    {% if gift_card.pass_url %}
    <a href="{{ gift_card.pass_url }}">
      <img id="apple-wallet-badge" src="{{ 'gift-card/add-to-apple-wallet.svg' | shopify_asset_url }}" width="120" height="40" alt="Add To Apple Wallet">
    </a>
    {% endif %}
  </footer>
</body>
</html>
