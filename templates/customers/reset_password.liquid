<!-- /templates/customers/reset_password.liquid -->
<div class="header-spacer"></div>
<section>
  <div class="inner">
      <div class="login-panel">
        <div class="login-panel-parent__inner"">
          <div class="reset-password-form__inner">
            <h3>Reset your password</h3>
            {% form 'reset_customer_password' %} {{ form.errors | default_errors }}

            <div class="input-el">
              <label for="password">Password</label>
              <input type="password" value="" name="customer[password]" size="16" />
            </div>

            <div class="input-el">
              <label for="password_confirmation">Password Confirmation</label>
              <input
                type="password"
                value=""
                name="customer[password_confirmation]"
                size="16"
              />
            </div>

            <div class="form-btn-group">
              <button class="primary-btn go" type="submit" id="login-btn">
                Reset Password
              </button>
            </div>

            {% endform %} 
          
          </div>
        </div>
      
      </div>
    
  </div>
</section>